{
    "customSyntax": "postcss-html",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-recommended-vue/scss"
    ],
    "ignoreFiles": [
        "**/*.js"
    ],
    "overrides": [
        {
            "files": [
                "*.vue",
                "**/*.vue"
            ],
            "rules": {
                "no-descending-specificity": null,
                "indentation": [
                    2,
                    {
                        "baseIndentLevel": 1
                    }
                ],
                "length-zero-no-unit": [
                    true,
                    {
                        "ignore": [
                            "custom-properties"
                        ]
                    }
                ]
            }
        }
    ]
}
